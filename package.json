  "repository": {
    "type": "git",
    "url": "https://github.com/decs/typeschema.git"
  },
  "scripts": {
    "build": "pnpm gen && turbo lint build lint:package",
    "build:deno": "denoify --src packages/typeschema/src",
    "create:adapter": "turbo gen create-adapter && pnpm gen",
    "gen": "turbo gen all && pnpm install",
    "test": "turbo test",
    "upgrade:deps": "turbo upgrade:deps",
    "prepare": "ts-patch install && typia patch"
  },

{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "tsconfig.json",
    "tsconfig.test.json",
    ".eslintrc.json",
    ".prettierrc.json",
    "tsup.config.ts",
    "vitest.config.ts"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["sync:pnpm"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "lint:package": {
      "dependsOn": ["build"]
    },
    "test": {
      "cache": false,
      "dependsOn": ["sync:pnpm"]
    },
    "upgrade:deps": {
      "cache": false
    },
    "sync:pnpm": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}

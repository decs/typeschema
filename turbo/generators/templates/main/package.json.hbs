{
  "name": "@typeschema/main",
  "version": "0.13.0",
  "description": "Universal adapter for schema validation",
  "keywords": [
    "typescript",
    "type",
    "schema",
    "adapter",
    "validation",
    "inference",
    "assert"
  ],
  "homepage": "https://typeschema.com",
  "license": "MIT",
  "author": {
    "name": "Andr√© Costa",
    "email": "andrefonsecacosta@gmail.com"
  },
  "files": [
    "/dist",
    "/assets"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/decs/typeschema.git"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "lint": "eslint src --fix",
    "lint:package": "publint && attw --pack",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --preset ts-jest",
    "prepack": "cp ../../README.md README.md && cp -R ../../assets assets",
    "postpack": "rm README.md && rm -r assets"
  },
  "dependencies": {
    "@typeschema/core": "workspace:*"
  },
  "devDependencies": {
{{#each adapterNames}}
    "@typeschema/{{this}}": "workspace:*",
{{/each}}
{{#each adapterPeerDependencies}}
    "{{@key}}": "{{this}}",
{{/each}}
  },
  "peerDependencies": {
{{#each adapterNames}}
    "@typeschema/{{this}}": "workspace:*",
{{/each}}
  },
  "peerDependenciesMeta": {
{{#each adapterNames}}
    "@typeschema/{{this}}": {
      "optional": true
    },
{{/each}}
  }
}
